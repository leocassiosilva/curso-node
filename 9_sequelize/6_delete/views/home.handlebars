
<h2>Lista de Usu√°rios</h2>
<div class="container">
    {{#each users}}
        <div class="item">
            <h3>{{this.name}}</h3>
            <div class="actions">
                <a href="/users/{{this.id}}" class="details-btn">Ver detalhes</a>
                <a href="/users/edit/{{this.id}}" class="edit-btn">Editar</a>
                <form action="/users/delete/{{this.id}}" method="POST" style="display:inline;">
                    <button type="submit" class="delete-btn">Deletar</button>
                </form>
            </div>
        </div>
    {{/each}}
    
</div>