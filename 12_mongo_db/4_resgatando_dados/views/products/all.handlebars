<h1>All Products</h1>
<div class="products">
    {{#each products}}
        <div class="product">
            <h2>{{this.name}}</h2>
            <img src="{{this.image}}" alt="{{this.name}}" />
            <p>Price: ${{this.price}}</p>
            <div class="actions">
                <a href="/products/{{this._id}}">View Details</a>
            </div>
        </div>
    {{/each}}
</div>