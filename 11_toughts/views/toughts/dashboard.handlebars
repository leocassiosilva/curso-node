<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/toughts/add" class="btn">Criar Pensamento</a>
    </div>
    <h3>Seus Pensamentos</h3>
    <ul>
        {{#each toughts}}
            <li>
                <span>{{this.title}}</span>
                <span class="actions">
                    <a href="/toughts/edit/{{this.id}}" class="btn">Editar</a>
                    <form action="/toughts/delete" method="POST">
                        <input type="hidden" name="id" id="id" value="{{this.id}}">
                        <button type="submit" class="btn btn-delete">Deletar</button>
                    </form>
                </span>

            </li>
        {{/each}}
    </ul>
</div>
{{#if emprtyToughts}}
    <p>Você ainda não criou nenhum pensamento. Comece a criar  <a href="/toughts/add">por aqui</a>.</p>
{{/if}}